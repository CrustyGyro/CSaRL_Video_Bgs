function T_Create_Reimu_Familiar_A(){
	
	let Fam_Obj = Render2D_Texture_A1( PL_Tex_Reimu, [ 80, 144, 96, 160 ], GetPlayerX, GetPlayerY, 1, 0.47 );
	ObjSprite2D_SetDestCenter( Fam_Obj );
	
	let Effect_Obj = Render2D_Texture_A1( PL_Tex_Reimu, [ 80, 144, 96, 160 ], 0, 0, 1.5, 0.46 );
	ObjRender_SetBlendType( Effect_Obj, BLEND_ADD_ARGB );
	ObjRender_SetAlpha( Effect_Obj, 100 );	
	ObjSprite2D_SetDestCenter( Effect_Obj );	
	ObjRender_SetColor( Effect_Obj, 0, 255, 0 );
	
	float Scale = 0;
	
	T_Render_Famliars();
	
	task T_Render_Famliars(){
		
		
		loop{
			
			//ObjRender_SetAngleZ( Effect_Obj, ObjRender_GetAngleZ( Effect_Obj ) + 1.5 );
			//ObjRender_SetAngleZ( Fam_Obj, ObjRender_GetAngleZ( Fam_Obj ) - 1.5 );
			ObjRender_SetScaleXYZ( Effect_Obj, 1.2 - 0.1 * sin( Scale ), 1.2 - 0.1 * sin( Scale ), 1 );
			//ObjSprite2D_SetDestCenter( Fam_Obj );
			//ObjSprite2D_SetDestCenter( Effect_Obj );	
			
			ObjRender_SetPosition( Effect_Obj, ObjRender_GetX( Fam_Obj ), ObjRender_GetY( Fam_Obj ), 0 );
		
			Scale+= 5;
			yield;
			
		
		}
		
	}		
	
	return Fam_Obj;
	
}	

function T_Manage_Familiars_A(){
	
	//AAAAAAAHHHHHHHHHHHHHHHHHHHHHHHHHHHHHHHHHH 
	let Objs = [];
	
	let Objs_Pos = [ [ 16, 28 ], [ -16, 28 ], [ 34, 18 ], [ -34, 18 ] ];
	let Objs_Pos_Focused = [ [ 10, -28 ], [ -10, -28 ], [ 28, -20 ], [ -28, -20 ] ];	
	let Objs_Laser = [ 0, 0, 3, -3 ];	
	let Objs_Laser_Focused = [ 0, 0, 0, 0 ];	
	
	let Shot_Angles = [ -80, -100, -90 + 32, -90 - 32 ];
	let Shot_Angles_Focused = [ -90, -90, -90 - 4, -90 + 4 ];	
	
	ascent( a in 0..4 ){
		
		Objs = Objs ~ [ T_Create_Reimu_Familiar_A() ];
		//T_Handle( Objs[a], a );
		
	}	
	
	float Dest_X = GetPlayerX();
	float Dest_Y = GetPlayerY();
	
	float Dist = 0;
	float Dir = 0;
	float Spin = 0;
	
	float Weight = 0.2;
		
	T_Handle();	
		
	task T_Handle(){
		ascent(i in 0..4) {	
			Create_PL_Lasers( Objs[i], 1, Objs_Laser[i], Objs_Laser_Focused[i], 1, i );
			//Familiar_Shoot_A( Objs[i], Shot_Angles[i], Shot_Angles_Focused[i] );
		}
		loop{
			
			Spin += 2;
			
			ascent(i in 0..4) {	
			
				//Familiar_Shoot_A( Objs[i], Shot_Angles[i], Shot_Angles_Focused[i] );
			
				if( GetVirtualKeyState( VK_SLOWMOVE ) == KEY_HOLD ){
					Dest_X = GetPlayerX() + 32 *sin( Spin/2 + ( i ) * 360/4 );
					Dest_Y = ( GetPlayerY() + 16 *cos( Spin/2 + ( i ) * 360/4) ) - 32;
				}
				else{
					Dest_X = GetPlayerX() + Objs_Pos[ i ][0];
					Dest_Y = GetPlayerY() + Objs_Pos[ i ][1];
				}			
			
				Dist = (( Dest_X - ObjRender_GetX( Objs[i] )) ^ 2 + ( Dest_Y - ObjRender_GetY( Objs[i] )) ^ 2 ) ^ 0.4;
				Dir = atan2( Dest_Y - ObjRender_GetY( Objs[i] ), Dest_X - ObjRender_GetX( Objs[i] ) );	
				
				if( Dist >= 1 ){
					
					ObjRender_SetPosition( Objs[i], ObjRender_GetX( Objs[i] ) + cos( Dir ) * Dist * Weight, ObjRender_GetY( Objs[i] ) + sin( Dir ) * Dist * Weight, 0 );
					
					
				}
				else{
									
					ObjRender_SetPosition( Objs[i], Dest_X, Dest_Y, 0 );
									
				}
			}
			yield;
		
		}
	}
}	
	
task Familiar_Shoot_A( Obj, Angle, Angle_Focused ){
		
	if( GetVirtualKeyState( VK_SHOT ) == KEY_PUSH || GetVirtualKeyState( VK_SHOT ) == KEY_HOLD && GetPlayerState() == STATE_NORMAL && Can_Fire == true ){
			
		Shot_Count_Fam++;
				
		if( Shot_Count_Fam % 13 == 0  ){
			if( GetVirtualKeyState( VK_SLOWMOVE ) == KEY_HOLD ){		

				T_Reimu_Shot_Needle( ObjRender_GetX( Obj ), ObjRender_GetY( Obj ), 24, -90, 1.4 );
					
			}	
		}
		if( Shot_Count_Fam % 15 == 0  ){
			if( GetVirtualKeyState( VK_SLOWMOVE ) == KEY_FREE ){
					
				T_Reimu_Shot_Fam( ObjRender_GetX( Obj ), ObjRender_GetY( Obj ), 0, Angle, 1 );
					
			}	
		}	
	}	
}		
	
//-------------------- Shots ----------------------
	
task T_Reimu_Shot_Main( X, Y, Speed, Angle, Dmg ){
	
	float Shot_X = 0;
	float Shot_Y = 0;
	
	let Shot_Obj = CreatePlayerShotA1( X, Y, Speed, Angle, Dmg, 1, 1 );
	Obj_SetRenderPriorityI( Shot_Obj, 47 );
	ObjMove_AddPatternA2( Shot_Obj, 1, 0, NO_CHANGE, 0.5, 22, 0 );	
	
	//T_Homing( Shot_Obj );
	
	T_Impact( Shot_Obj );
	
	task T_Impact( Shot_Obj ){
	
		float Scale = 1;
		float Scale_Shot = 1;
		float Scale_Shot_Y = 0;
		
		async{
			
			ascent( i in 0..30 ){
			
				ObjRender_SetScaleXYZ( Shot_Obj, Scale_Shot_Y, Scale_Shot_Y, Scale_Shot_Y);
				
				Scale_Shot_Y += 1.2/30;
				
				yield;
			}
			
		}
	
		while( !Obj_IsDeleted( Shot_Obj ) ){
			
			Shot_X = ObjMove_GetX( Shot_Obj );
			Shot_Y = ObjMove_GetY( Shot_Obj );
			
			yield;
		}	
			
		let E_Impact = Render2D_Texture_A1( PL_Tex_Reimu, [ 0, 240, 32, 272 ], Shot_X, Shot_Y, 2, 0.47 );
		ObjRender_SetBlendType( E_Impact, BLEND_ADD_ARGB );
		
		ObjSprite2D_SetDestCenter( E_Impact );
		T_FadeOut_Delete( E_Impact, 40, 255 );
		
		if( Shot_Y >= 0 + 16 ){ 
		
			T_PlaySE( SE_PL_SHOT_02, 25 ); 
		
			async{
				
				float Wait_RNG = rand( 2, 6 );
				
				ascent( i in 0..8 ){
					
					ObjSprite2D_SetSourceRect( E_Impact, 32 * i, 240, 32 * ( i + 1 ), 272 );
					
					wait( Wait_RNG );
				}
				
				Obj_Delete( E_Impact );
				
			}	
			
			float X_Pos = rand( -1, 1 );
			float Y_Pos = rand( -1, -0.4 );
			
			while( !Obj_IsDeleted( E_Impact ) ){
				
				ObjRender_SetPosition( E_Impact, ObjRender_GetX( E_Impact ) + X_Pos, ObjRender_GetY( E_Impact ) + Y_Pos , 0 );
				ObjRender_SetScaleXYZ( E_Impact, Scale, Scale, Scale );
				
				Scale += 0.06;
				
				yield;
				
			}	
		}	
	
	}	

}	

