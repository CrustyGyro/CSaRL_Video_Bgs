function Player_Shoot_A(){
	
	float Angle_Sway = 0;
	
	if( GetVirtualKeyState( VK_SHOT ) == KEY_PUSH || GetVirtualKeyState( VK_SHOT ) == KEY_HOLD && GetPlayerState() == STATE_NORMAL && Can_Fire == true ){
		
		Shot_Count_Main++;
		Angle_Sway += 5;
		
		if( Shot_Count_Main >= 15 ){
			
			Angle_Sway = 0;
			Shot_Count_Main = 0;
			
		}
		if( Shot_Count_Main == 0 || Shot_Count_Main == 10 ) {
			if( GetVirtualKeyState( VK_SLOWMOVE ) == KEY_HOLD ){
				//Play_SFX( SFX_PL_SHOT01, 55 );
				T_PlaySE( SE_PL_SHOT_01, 25 );
				T_Reimu_Shot_Main( GetPlayerX() - 10, GetPlayerY(), 10, -90 - 24 * sin ( Angle_Sway ), 2.3 );
				T_Reimu_Shot_Main( GetPlayerX() + 10, GetPlayerY(), 10, -90 + 24 * sin ( Angle_Sway ), 2.3 );			
				//T_Reimu_Shot_Main( GetPlayerX(), GetPlayerY(), 22, -90 - 8, 2.3 );
				//T_Reimu_Shot_Main( GetPlayerX(), GetPlayerY(), 22, -90 + 8, 2.3 );
			
			}
			else{
				
				T_PlaySE( SE_PL_SHOT_01, 25 );
				T_Reimu_Shot_Main( GetPlayerX() - 10, GetPlayerY(), 10, -90 - 24 * sin ( Angle_Sway ), 2 );
				T_Reimu_Shot_Main( GetPlayerX() + 10, GetPlayerY(), 10, -90 + 24 * sin ( Angle_Sway ), 2 );			
				//T_Reimu_Shot_Main( GetPlayerX(), GetPlayerY(), 22, -90 - 12, 2 );
				//T_Reimu_Shot_Main( GetPlayerX(), GetPlayerY(), 22, -90 + 12, 2 );			
				
				
			}	
		}			
		
	}	
}	

task Create_PL_Lasers( Obj, Speed, Angle_Offset, Focused_Angle_Offset, Dmg, Id ){
	
	float Frame = 0;
	int Rect = 0;
	float Fam_X = 0;
	float Fam_Y = 0;
	float Scale = 0;
	float Laser_Alpha = 150;
	float Laser_Angle = 0;
	float Color_Pulse = 0;

	let Laser_Obj = ObjShot_Create(OBJ_STRAIGHT_LASER);
	ObjShot_Regist( Laser_Obj );
	ObjShot_SetDamage( Laser_Obj, 0);
	ObjShot_SetGraphic( Laser_Obj, 4 );
	ObjLaser_SetLength( Laser_Obj, 512 );
	ObjLaser_SetIntersectionWidth( Laser_Obj, 32 );
	ObjLaser_SetRenderWidth( Laser_Obj, 16 );
	//ObjMove_SetAngle( Laser_Obj, 90 );
	ObjStLaser_SetAngle( Laser_Obj, -90 + Angle_Offset);
	ObjRender_SetAlpha( Laser_Obj, 0 );
	
	
	int Laser_Effect = Render2D_Texture_A1( PL_Tex_Reimu, [ 256, 0, 272, 512 ], GetPlayerX(), GetPlayerY(), 1, 0.47 );
	ObjSprite2D_SetDestRect(Laser_Effect, -8, -512, 8, 0 );
	ObjRender_SetBlendType( Laser_Effect, BLEND_ADD_ARGB );
	ObjRender_SetAngleZ( Laser_Effect, 0 );
	ObjRender_SetAlpha( Laser_Effect, 100 );
	
	int Laser_Effect_Back = Render2D_Texture_A1( PL_Tex_Reimu, [ 256 +16, 0, 272 +16, 512 ], GetPlayerX(), GetPlayerY(), 1, 0.46 );
	ObjSprite2D_SetDestRect( Laser_Effect_Back, -16, -512, 16, 0 );
	ObjRender_SetBlendType( Laser_Effect_Back, BLEND_ADD_ARGB );
	ObjRender_SetAngleZ( Laser_Effect_Back, 0 );
	ObjRender_SetAlpha( Laser_Effect_Back, 60 );	
	ObjRender_SetColor( Laser_Effect_Back, 0, 0, 255 );
	
	int Laser_Flare = Render2D_Texture_A1( PL_Tex_Reimu, [ 128, 144, 160, 176 ], GetPlayerX(), GetPlayerY(), 1, 0.46 );
	ObjRender_SetBlendType( Laser_Flare, BLEND_ADD_ARGB);
	Obj_SetRenderPriorityI( Laser_Flare, 48);
	ObjRender_SetScaleXYZ( Laser_Flare, 1.4, 1.4, 1.4 );	
	//ObjSprite2D_SetSourceRect( Laser_Obj, 0, 223, 256, 240 );
	
	while( !Obj_IsDeleted( Obj ) ) {
		
		Fam_X = ObjRender_GetX( Obj );
		Fam_Y = ObjRender_GetY( Obj );
		//ObjMove_SetAngle( Laser_Obj, -90 );

		if( GetVirtualKeyState( VK_SHOT ) == KEY_FREE ){

			if( Scale > 0 ){
				
				Scale -= 0.1;
			}
			else if( Scale <= 0 ){
				
				ObjRender_SetAlpha( Laser_Obj, 0 );
				Scale = 0;
			}
			//Laser_Alpha = 150;

			//ObjLaser_SetRenderWidth( Laser_Obj, Scale );
			ObjRender_SetScaleXYZ( Laser_Flare, Scale, Scale, 1);
			ObjRender_SetScaleXYZ( Laser_Effect, Scale, 1, 1);
			ObjRender_SetScaleXYZ( Laser_Effect_Back, Scale, 1, 1);
			ObjShot_SetDamage( Laser_Obj, 0);

		}
		else{
			
			if( Scale < 1 )
			{
				 Scale += 0.1;
			}
			else if( Scale >=  1)
			{
				Scale = 1 ;
			}
			//Laser_Alpha = 150;
			if( GetVirtualKeyState( VK_SLOWMOVE ) == KEY_HOLD ){		
				
				ObjStLaser_SetAngle( Laser_Obj, -90 + Focused_Angle_Offset );
			}
			else{
				
				ObjStLaser_SetAngle( Laser_Obj, -90 + Angle_Offset);
				
			}
			//ObjRender_SetScaleXYZ( Laser_Obj, 1, Scale, 1);
			//ObjRender_SetColor( Laser_Effect_Back, 255, 155 - 55 * sin( Color_Pulse ), 0 );
			ObjRender_SetScaleXYZ( Laser_Flare, Scale, Scale, 1);
			ObjRender_SetScaleXYZ( Laser_Effect, Scale, 1, 1);
			ObjRender_SetAngleZ( Laser_Effect, ObjStLaser_GetAngle( Laser_Obj ) + 90 );
			
			ObjRender_SetScaleXYZ( Laser_Effect_Back, Scale, 1, 1);
			ObjRender_SetAngleZ( Laser_Effect_Back, ObjStLaser_GetAngle( Laser_Obj ) + 90 );			
			ObjShot_SetDamage( Laser_Obj, 1.6 );		

			Rect += 4;


		}		

		ObjSprite2D_SetSourceRect( Laser_Effect, 256, 0 + Rect, 272, 512  + Rect);
		ObjRender_SetPosition( Laser_Effect, Fam_X, Fam_Y, 0 );
		
		ObjSprite2D_SetSourceRect( Laser_Effect_Back, 256, 0 + Rect/4, 272, 512 + Rect/4 );
		ObjRender_SetPosition( Laser_Effect_Back, Fam_X, Fam_Y, 0 );	
		ObjRender_SetPosition( Laser_Flare, Fam_X, Fam_Y, 0 );
		
		ObjMove_SetPosition( Laser_Obj, Fam_X, Fam_Y );
		
		Color_Pulse+= 8;
		Frame++;

		yield;
	}
	
	
}	

